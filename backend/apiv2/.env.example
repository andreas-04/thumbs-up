# ThumbsUp API v2 Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8443
STORAGE_PATH=./storage

# SSL Certificates
CERT_PATH=./certs/server_cert.pem
KEY_PATH=./certs/server_key.pem

# Security Settings
TOKEN_EXPIRY_HOURS=24
ADMIN_PIN=123456  # Change this! Set during device setup

# Feature Flags
ENABLE_UPLOADS=true
ENABLE_DELETE=false

# Service Discovery
SERVICE_NAME=ThumbsUp File Share

# Upload Limits (in bytes)
MAX_UPLOAD_SIZE=104857600  # 100MB
