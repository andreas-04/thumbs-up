# ThumbsUp API v2 Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8443
STORAGE_PATH=./storage

# SSL Certificates
CERT_PATH=../certs/server_cert.pem
KEY_PATH=../certs/server_key.pem

# Security Settings
TOKEN_EXPIRY_HOURS=24

# Feature Flags
ENABLE_UPLOADS=true
ENABLE_DELETE=false

# Service Discovery
SERVICE_NAME=ThumbsUp File Share

# Upload Limits (in bytes, 100MB default)
MAX_UPLOAD_SIZE=104857600
