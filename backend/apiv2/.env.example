# ThumbsUp API v2 Configuration

# Required: Admin PIN for initial setup (must be set)
ADMIN_PIN=changeme

# Server Configuration
HOST=0.0.0.0
PORT=8443
STORAGE_PATH=./storage

# Database
DATABASE_URI=sqlite:///./data/thumbsup.db

# SSL Certificates
CERT_PATH=./certs/server_cert.pem
KEY_PATH=./certs/server_key.pem

# Security Settings
TOKEN_EXPIRY_HOURS=24

# CORS Configuration (comma-separated origins or '*' for all)
CORS_ORIGINS=*

# Feature Flags
ENABLE_UPLOADS=true
ENABLE_DELETE=false

# Service Discovery
SERVICE_NAME=ThumbsUp File Share

# Upload Limits (in bytes, 100MB default)
MAX_UPLOAD_SIZE=104857600
